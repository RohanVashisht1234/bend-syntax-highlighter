{
  "name": "bend",
  "displayName": "Bend",
  "description": "Bend programming language's complete language support extension",
  "icon": "./icons/icon.avif",
  "license": "MIT",
  "version": "0.2.11",
  "author": "Rohan Vashisht",
  "bugs": {
    "email": "learncodingly@gmail.com",
    "url": "https://github.com/RohanVashisht1234/bend-syntax-highlighter/issues"
  },
  "repository": "https://github.com/RohanVashisht1234/bend-syntax-highlighter",
  "publisher": "RohanVashisht",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "languages": [
      {
        "id": "bend",
        "aliases": [
          "Bend",
          "bend"
        ],
        "extensions": [
          ".bend"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "./icons/langIcon/light.webp",
          "dark": "./icons/langIcon/dark.webp"
        }
      }
    ],
    "views": {
      "BendContainer": [
        {
          "id": "bendView",
          "name": "View Options"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "BendContainer",
          "title": "Bend",
          "icon": "./icons/sideBarIcon.webp"
        }
      ]
    },
    "grammars": [
      {
        "language": "bend",
        "scopeName": "source.bend",
        "path": "./syntaxes/bend.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bend",
        "path": "./snippets/bend.json"
      }
    ],
    "commands": [
      {
        "command": "runBendFile",
        "title": "runBendFile",
        "shortTitle": "runBendFile",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "runBendFile",
          "when": "editorLangId == bend",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "runBendFile",
        "key": "F5"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
