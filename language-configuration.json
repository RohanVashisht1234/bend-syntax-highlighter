{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:def|class|for|if|elif|else|try|with|finally|except|async).*?:\\s*$",
      "action": {
        "indent": "none",
        "appendText": "  "
      }
    }
  ]
}
